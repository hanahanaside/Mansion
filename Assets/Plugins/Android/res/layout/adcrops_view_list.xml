<?xml version="1.0" encoding="UTF-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adcrops_list_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/adcrops_background" >

        <ImageView
            android:id="@+id/adcrops_list_view_appIcon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="6dip"
            android:src="@drawable/adcrops_blank_icon" />
        
        <TextView
            android:id="@+id/adcrops_list_view_description"
            android:layout_width="165dip"
            android:layout_height="47dip"
            android:layout_marginTop="10dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/adcrops_list_view_appIcon"
            android:ellipsize="end"
            android:gravity="center_vertical|top"
            android:scrollHorizontally="true"
            android:textColor="@color/adcrops_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/adcrops_list_view_appName"
            android:layout_width="165dip"
            android:layout_height="10dip"
            android:layout_marginBottom="10dip"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/adcrops_list_view_description"
            android:layout_toRightOf="@+id/adcrops_list_view_appIcon"
            android:ellipsize="end"
            android:gravity="center_vertical|top"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/adcrops_appName_color"
            android:textSize="11sp"
            android:textStyle="bold|italic" />
        
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dip"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:layout_toRightOf="@+id/adcrops_list_view_description"
                    android:src="@drawable/adcrops_button" />

    </RelativeLayout>
  
</LinearLayout>  